<script>
    async function updateCartBadge() {
        try {
            const response = await fetch('/Cart/CartInfo');
            const data = await response.json();

            document.getElementById('purchasedCount').textContent = data.purchased;
            document.getElementById('soldCount').textContent = data.sold;
        } catch (error) {
            console.error('Error fetching cart info:', error);
        }
    }

    // تحديث عند تحميل الصفحة
    document.addEventListener('DOMContentLoaded', updateCartBadge);
</script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    // إنشاء اتصال
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/notificationHub")
        .build();

    // استقبال إشعار
    connection.on("ReceiveNotification", function (message) {
        // 👇 1) Toast
        showToast(message);

        // 👇 2) إضافة للإشعارات
        let listSelector = "";
    @if (User.IsInRole("Admin"))
    {
        @:listSelector = "#adminNotificationsList";
    }
    else if (User.IsInRole("User"))
    {
        @:listSelector = "#userNotificationsList";
    }

        const list = document.querySelector(listSelector);
        if (list) {
            // احذف النص الافتراضي لو موجود
            const first = list.querySelector(".text-muted");
            if (first) first.remove();

            const li = document.createElement("li");
            li.classList.add("mb-2");
            li.innerHTML = `<div class="alert alert-info p-2">${message}</div>`;
            list.prepend(li);
        }
    });

    // تشغيل الاتصال
    connection.start().then(() => {
        console.log("✅ Connected to NotificationHub");
    }).catch(err => console.error("❌ Error:", err));

    // دالة Toast
    function showToast(message) {
        const toast = document.createElement("div");
        toast.className = "toast align-items-center text-bg-primary border-0 show position-fixed bottom-0 end-0 m-3";
        toast.style.zIndex = "9999";
        toast.role = "alert";
        toast.innerHTML = `
            <div class="d-flex">
                <div class="toast-body">${message}</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>`;
        document.body.appendChild(toast);

        setTimeout(() => toast.remove(), 5000);
    }
</script>



<script>
    function updateNotificationCount() {
        fetch('/Notifications/UnreadCount')
            .then(response => response.json())
            .then(data => {
                // ضع الـ span في كلا الزرين
                const badges = document.querySelectorAll('.notification-badge');
                badges.forEach(badge => {
                    if (data.count > 0) {
                        badge.textContent = data.count;
                        badge.style.display = 'inline-block';
                    } else {
                        badge.style.display = 'none';
                    }
                });
            });
    }

    @* // تحديث العدد كل 5 ثوانٍ *@
    setInterval(updateNotificationCount, 5000);

    @* // تحديث العدد عند تحميل الصفحة لأول مرة *@
    updateNotificationCount();
</script>


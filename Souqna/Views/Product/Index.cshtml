@model IEnumerable<Souqna.Models.Product>

<h2>قائمة المنتجات</h2>

<table class="table">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>السعر</th>
            <th>الفئة</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.PriceOfUnit</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>

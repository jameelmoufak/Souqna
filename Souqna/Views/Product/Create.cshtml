@model Souqna.Data.ViewModels.ProductVM
@using Souqna.Data.Enums


@{
    ViewData["Title"] = "إضافة منتج جديد";
}

<h2 class="mb-4">إضافة منتج جديد</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
    <div asp-validation-summary="All" class="text-danger mb-2"></div>

    <div class="col-md-6">
        <label asp-for="Name" class="form-label">اسم المنتج</label>
        <input asp-for="Name" class="form-control" placeholder="أدخل اسم المنتج" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PriceOfUnit" class="form-label">سعر الوحدة</label>
        <input asp-for="PriceOfUnit" type="number" step="0.01" class="form-control" placeholder="0.00" />
        <span asp-validation-for="PriceOfUnit" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label">وصف المنتج</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="أدخل وصف المنتج"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Category" class="form-label">فئة المنتج</label>
        <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<ProductEnums.ProductCategory>()">
            <option value="">-- اختر فئة --</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Unit" class="form-label">وحدة القياس</label>

        <select asp-for="Unit" class="form-select" asp-items="Html.GetEnumSelectList<ProductEnums.UnitOfMeasurement>()">
            <option value="">-- اختر وحدة --</option>
        </select>
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="StockQuantity" class="form-label">الكمية المتاحة</label>
        <input asp-for="StockQuantity" class="form-control" min="1" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="IsNew" class="form-label">هل المنتج جديد؟</label>
        <input asp-for="IsNew" type="checkbox" class="form-check-input ms-2" />
    </div>

    <div class="col-12">
        <label class="form-label">صور المنتج (بحد أقصى 8 صور)</label>
        <input asp-for="UploadedImages" type="file" multiple class="form-control" accept="image/*" />
        <span asp-validation-for="UploadedImages" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">حفظ المنتج</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

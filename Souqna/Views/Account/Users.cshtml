@model List<Souqna.Models.ApplicationUser>

<h2>إدارة المستخدمين 👥</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>الصورة</th>
            <th>الاسم</th>
            <th>الإيميل</th>
            <th>الرصيد</th>
            <th>الدور</th>
            <th>التحكم</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <img src="@(string.IsNullOrEmpty(user.ProfileImage) ? "/images/default-user.png" : user.ProfileImage)"
                         style="width:50px;height:50px;border-radius:50%;" />
                </td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Balance.ToString("C")</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">✏ تعديل</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">🗑 حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

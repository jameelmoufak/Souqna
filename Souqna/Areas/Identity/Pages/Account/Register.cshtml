@page
@model UsedMarket.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <hr />

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- الاسم الكامل -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.FullName" class="form-control" placeholder="الاسم الكامل" />
                    <label asp-for="Input.FullName">الاسم الكامل</label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <!-- البريد -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">البريد الإلكتروني</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- كلمة المرور -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" placeholder="••••••" />
                    <label asp-for="Input.Password">كلمة المرور</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- تأكيد كلمة المرور -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="••••••" />
                    <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning">إنشاء حساب</button>
            </form>

            <div class="text-center mt-3">
                <span>لديك حساب؟</span>
                <a asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
            </div>

        </div>

        <!-- التسجيل عبر خدمات خارجية -->
        <div class="col-md-5 mt-5 mt-md-0">
            <section>
                <h4 class="mb-3">أو استخدم خدمة خارجية</h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-info small">
                            لم يتم تكوين أي مزوّد تسجيل خارجي (Google، Facebook، ...).
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary me-2 mb-2"
                                        name="provider" value="@provider.Name"
                                        title="سجّل عبر @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model LoginModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <hr />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- البريد الإلكتروني -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">البريد الإلكتروني</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- كلمة المرور -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" placeholder="••••••" />
                    <label asp-for="Input.Password">كلمة المرور</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- تذكرني -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        تذكرني
                    </label>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">تسجيل الدخول</button>
            </form>

            <div class="text-center mt-4">
                <a asp-page="./ForgotPassword">هل نسيت كلمة المرور؟</a><br />
                <span>ليس لديك حساب؟</span>
                <a asp-page="./Register">إنشاء حساب</a>
            </div>

        </div>

        <!-- تسجيل عبر مزود خارجي -->
        <div class="col-md-5 mt-5 mt-md-0">
            <section>
                <h4 class="mb-3">أو استخدم خدمة خارجية</h4>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="alert alert-info small">
                            لم يتم تفعيل تسجيل الدخول عبر مزودات خارجية (Google، Facebook، إلخ).
                        </div>
                    }
                    else
                    {
                        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary me-2 mb-2"
                                        name="provider" value="@provider.Name"
                                        title="سجّل باستخدام @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
